<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/head.ejs', {title: 'SunSurfSea | REVIEWS'}) %>
    <link rel="stylesheet" href="/styles/main.css">
</head>

<body>
    <%- include('./partials/nav.ejs') %>

    <main>
    <br>
        <section >
            <h2>Reviews</h2>
            <br>
            <div class="index-box">
                
                <ul class="index">         
                    <% for (let review of reviews) { %>
                        <li>
                           
                        <figcaption>
                            <div>
                                <br>
                                <h3><%= review.reviewName %>  |  <%= review.reviewEmail %></h3>
                                <br>
                                <p><strong> DATE: </strong> <%= review.reviewDate.toDateString() %> </p>
                                <p><strong>RATING: </strong><%= review.reviewRating %> </p>
                                <a href="/reviews/<%= review._id %>" class="btn btn-outline-secondary btn-sm px-3 me-md-2">DETAILS</a>
                            </div>
                            <br>
                        </figcaption>
                        </li>
                    <% } %>
                </ul> 
                <br>
            </div>        
        </section>       
    </main>

    <%- include('./partials/foot.ejs') %>
</body>
<script>d
    function reviewDate(date) {
      const options = { year: 'numeric', month: '2-digit', day: '2-digit' };
      return new Date(date).toLocaleDateString(undefined, options);
    }
    reviewDate();
  </script>
</html>
