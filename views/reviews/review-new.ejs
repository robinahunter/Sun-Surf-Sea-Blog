        <input class="input" type="text" id="reviewName" name="reviewName" required>
        <br>
        <br>
       
        <label for="reviewEmail">Email:</label> 
        <input class="input" type="text" id="reviewEmail" name="reviewEmail" required>  
        <br>
        <br>
   
        <label for="reviewRating">Rating:</label>
        <input class="input" type="number" id="reviewRating" name="reviewRating" required>
        <br>
        <br>
   
        <label for="reviewDescription">Description:</label>
        <input class="input" type="text" id="reviewDescription" name="reviewDescription" required>
        <br>
        <br>
        
        <input class="btn" type="submit" value="NEW">
        <br>
        <br>
        <br>
        <br>
    </form>

    <%- include('./partials/foot.ejs') %>
